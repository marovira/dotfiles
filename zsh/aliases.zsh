# Vim aliases
alias vi='nvim'
alias vim='nvim'

alias df='df -h'
alias du='du -h'
alias less='less -r'
alias whence='type -a'
alias grep='grep --color'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias open='xdg-open'

# Directory listings.
alias ls='ls -1 -hF --color=auto'
alias la='ls =A'

